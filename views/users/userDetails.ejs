<%- include ('../layouts/user/header.ejs') %>

<div class="hero">
    <div class="container">
      <div class="row justify-content-between">
        <div class="col-lg-5">
          <div class="intro-excerpt">
            <h1>Hello, <%= isLoggedIn.name  %></h1>
          </div>
        </div>
        <div class="col-lg-7"></div>
      </div>
    </div>
  </div>
<%- include('../partials/breadcrumbs.ejs')  %>

  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
            <a class="nav-link active" aria-current="true" href="/userDetails">My profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="true" href="/showAddress?id=<%= isLoggedIn._id %>">Manage Address</a>
          </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="true" href="/orders">My orders</a>
        </li>
      </ul>
    </div>
  </div>


<div class="container m-5">
    <div class="header" style="display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;">
        <img src="/images/profile.png" alt="Profile Picture" style="border-radius: 50%;
        width: 80px;
        height: 80px;">
        <div>
            <h1><%= isLoggedIn.name  %></h1>
            <button style="padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;"><a href="/editProfile?id=<%= isLoggedIn._id %>"style="color:white;" class="text-start">Edit Profile</a></button>
        </div>
    </div>
    <div class="content" style="display: flex;
            margin-top: 20px;">
        <div class="sidebar"style="width: 30%;
        padding-right: 20px;
        border-right: 1px solid #ddd;">
            <div class="section" style="margin-bottom: 20px;">
                <h2 style="
                margin-bottom: 10px;
                border-bottom: 1px solid #ddd;
                padding-bottom: 5px;">Personal Info</h2>
                <h6>Name: <%= isLoggedIn.name %></h6>
                <h6>Username: <%= isLoggedIn.username  %></h6>
                <h6>Email: <%= isLoggedIn.email %></h6>
                <h6>Phone: <%= isLoggedIn.mobile %></h6>
                <button ><a href="/changePassword?id=<%= isLoggedIn._id %>"style="color:black;" class="text-start">Change Password</a></button>
            </div>
            <div class="section">
                <h2 style="font-size: 1.2em;
                margin-bottom: 10px;
                border-bottom: 1px solid #ddd;
                padding-bottom: 5px;">Payment Methods</h2>
                <p>Card 1: **** **** **** 1234</p>
                <p>Card 2: **** **** **** 5678</p>
                <button>Add New</button>
            </div>
        </div>
        <div class="main" style="width: 70%;
            padding-left: 20px;">
            <div class="section" style="margin-bottom: 20px;">
                <h2 style="font-size: 1.2em;
                margin-bottom: 10px;
                border-bottom: 1px solid #ddd;
                padding-bottom: 5px;">Wishlist</h2>
                <p>Item 1 <button>Remove</button></p>
                <p>Item 2 <button>Remove</button></p>
                <button>View All Wishlist</button>
            </div>
        </div>
    </div>
</div>

<%- include ('../layouts/user/footer.ejs') %>


