<script>
  $(document).ready(function () {
        // Function to calculate and update cart totals
        function updateCartTotals() {
            var total = 0;

            // Loop through each product row in the table
            $('.product-row').each(function () {
                var price = parseFloat($(this).find('.product-price').text().replace(/\D/g,''));
                var quantity = parseInt($(this).find('.quantity-amount').val());
                var productTotal = price * quantity;

                // Update product total
                $(this).find('.product-total').text('₹' +productTotal.toFixed(2));

                // Add product total to subtotal
                total += productTotal ;
            });

            // Update subtotal
            $('.subtotal-amount').text('₹'+total.toFixed(2));

            // Update total (assuming subtotal is the total for now)
            $('.total-amount').text(total.toFixed(2));
        }

        // Calculate and update cart totals on page load
        updateCartTotals();

        // Bind quantity change event to update totals

            $('.quantity-amount').on('change',function(){
              updateCartTotals();
              let productId = $(this).closest('.product-row').data('product-id');
              let quantity = parseInt($(this).val());
              updateQuantityInCart(productId,quantity);
            });

            $('.increase').on('click',function(){
              let input = $(this).closest('.quantity-container').find('.quantity-amount');
              let newValue = parseInt(input.val())+1;
              input.val(newValue).change();

            });

            $('decrease').on('click',function(){
              let input = $(this).closest('.quantity-container').find('quantity-amoount');
              let newValue= parseInt(input.val())-1;
              if(newValue >=1){
                input.val(newValue).change();
              }
            })
        });

    function updateQuantityInCart(productId,quantity){
      $.ajax({
        url:'/cart/updateQuantity',
        method:'POST',
        data:{productId:productId,quantity:quantity},
        success:function(response){
          if(!response.success){
            alert("Error updating quantity ", response.message);
          }
        },
        error:function(){
          alert('An error occured while updating quantity');
        }
      })
    }
    //remove product from the cart
    $('.remove-product-btn').on('click',function(){
      let productId = $(this).data('product-id');
      let productRow = $(this).closest('.product-row');
      
      $.ajax({
        url:'/cart/remove',
        method:'POST',
        data:{productId:productId},
        success:function(response){
          if(response.success){
            productRow.remove();
            updateCartTotal();
          }else{
            alert('Error removing product: ',response.message);
          }
        },
        error:function(){
          alert('An error occurred while removing the product');
        }
      })
    })


  
