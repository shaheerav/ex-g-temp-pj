                    <% if (product.image.length > 0) { %>
                        <% product.image.forEach((image,index)=> { %>
                          <div id="image-container-<%= index %>">
                          <img src="/uploads/<%= image %>" alt="" style="height: 200px; width: 200px;" >
                          <button class="btn bg-danger" onclick="deleteImage('<%=product._id %>','<%=index %>')" >Delete</button>
                            </div>
                          <% }); %>
                      <% } else { %>
                        <h3>no images</h3>
                      <% } %>
                </div>
            </div>
        </div>
    </div>
